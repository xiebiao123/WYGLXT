<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Admin">
	<!--引入pojo-->
	<typeAlias alias="admin" type="com.xiaoqu.wygl.admin.dto.Admin" />
	<typeAlias alias="adminCondition" type="com.xiaoqu.wygl.admin.dto.AdminCondition" />

	<!-- search resultMap -->
	<resultMap id="adminResult" class="admin">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="passWord" column="pass_word" />
		<result property="tel" column="tel" />
		<result property="email" column="email" />
	</resultMap>

	<sql id="queryCondition">
		id,name,pass_word,tel,email
	</sql>
	
	<!--插入语句-->
	<insert id="add">
		INSERT INTO
			admin(name,pass_word,tel,email)
		values
			<dynamic>
		(
		<isEmpty property="name">
			null,
		</isEmpty>
		<isNotEmpty property="name">
			#name#,
		</isNotEmpty>
		<isEmpty property="passWord">
			null,
		</isEmpty>
		<isNotEmpty property="passWord">
			#passWord#,
		</isNotEmpty>
		<isEmpty property="tel">
			null,
		</isEmpty>
		<isNotEmpty property="tel">
			#tel#,
		</isNotEmpty>
		<isEmpty property="email">
			null
		</isEmpty>
		<isNotEmpty property="email">
			#email#
		</isNotEmpty>
		)
		</dynamic>
		<selectKey resultClass="java.lang.Integer" keyProperty="id">  
        	select last_insert_id() as ID from admin limit 1  
    	</selectKey>
	</insert>

	<!--删除语句 -->
    <delete id="delete" parameterClass="java.lang.Integer">  
        DELETE FROM 
        	admin 
        WHERE 
        	id = #id#  
    </delete>
    
    <!--修改语句 -->
    <update id="update" parameterClass="admin">  
        UPDATE 
        	admin 
        SET <!-- updateTime = sysdate  -->
		<dynamic>
			<isNotNull property="name">
				<isEmpty property="name">
					name = null
				</isEmpty>
				<isNotEmpty property="name">
					name = #name#
				</isNotEmpty>
			</isNotNull>
			<isNotNull prepend="," property="passWord">
				<isEmpty property="passWord">
					pass_word = null
				</isEmpty>
				<isNotEmpty property="passWord">
					pass_word = #passWord#
				</isNotEmpty>
			</isNotNull>
			<isNotNull prepend="," property="tel">
				<isEmpty property="tel">
					tel = null
				</isEmpty>
				<isNotEmpty property="tel">
					tel = #tel#
				</isNotEmpty>
			</isNotNull>
			<isNotNull prepend="," property="email">
				<isEmpty property="email">
					email = null
				</isEmpty>
				<isNotEmpty property="email">
					email = #email#
				</isNotEmpty>
			</isNotNull>

		</dynamic>
        WHERE 
        	id = #id# 
    </update>
    
    <!--通过id查找 -->
	<select id="findById" resultMap="adminResult">
		SELECT  
			<include refid="queryCondition"/> 
		FROM 
			admin 
		WHERE
			id = #id#
	</select>
	
	
	<sql id="queryConditionSql">
		SELECT 
			<include refid="queryCondition"/> 
		FROM  
			admin 
	    <dynamic prepend="WHERE">
			<isNotNull prepend="and" property="id">
				id = #id#
			</isNotNull>
			<isNotNull prepend="and" property="name">
				name = #name#
			</isNotNull>
			<isNotNull prepend="and" property="passWord">
				pass_word = #passWord#
			</isNotNull>
			<isNotNull prepend="and" property="tel">
				tel = #tel#
			</isNotNull>
			<isNotNull prepend="and" property="email">
				email = #email#
			</isNotNull>

	    </dynamic>
	</sql>
	
	<!--分页查询-->
	<select id="findPageByCondition" resultMap="adminResult" parameterClass="adminCondition">
		<include refid="queryConditionSql"/>
		limit 
			#startRow#,#endRow# 
	</select>
	
	<select id="countByCondition" parameterClass="adminCondition" resultClass="java.lang.Integer">
		select 
			count(*) 
		from 
			(<include refid="queryConditionSql"/>) as da
	</select>
	
</sqlMap>
